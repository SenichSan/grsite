# Environment configuration for Django project (example)
# Copy this file to .env and fill in real secrets.

# Core
DEBUG=True
SECRET_KEY=change-me-in-prod
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (PostgreSQL)
DB_NAME=grdbhome
DB_USER=home
DB_PASSWORD=home
DB_HOST=localhost
DB_PORT=5432

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# External APIs
NOVA_POSHTA_API_KEY=

# --- Production security (enable on VPS) ---
# Force cookies over HTTPS only
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# HTTP Strict Transport Security (enable only when HTTPS is fully configured)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Redirect HTTP -> HTTPS behind reverse proxy
SECURE_SSL_REDIRECT=False

# Security headers
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
X_FRAME_OPTIONS=DENY

# CSRF trusted origins (comma-separated, include scheme). Example for prod:
# CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=

# --- Logging (optional) ---
# Console logging works by default. To also log to file in prod, enable:
LOG_LEVEL=INFO
LOG_TO_FILE=False
# On Windows use a relative path or absolute Windows path; on Linux VPS use something like /var/log/grownica/app.log
LOG_FILE=logs/app.log

# --- Static files storage (optional, enable on prod for cache-busting) ---
# Uncomment to enable hashed filenames after collectstatic (only on prod):
# STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage
