# /etc/nginx/sites-available/grownica
# Конфигурация для работы по IP без SSL (временное решение)
# Устраняет зацикливание редиректов HTTP ↔ HTTPS

server {
    listen 80;
    server_name 84.247.162.92 _;  # IP и любой домен

    # Max upload size
    client_max_body_size 20M;

    # Security headers (базовые, без HTTPS)
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Static files
    location /static/ {
        alias /srv/grownica/project/staticfiles/;
        autoindex off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
        
        # AVIF support
        location ~* \.(avif)$ {
            add_header Vary Accept;
            expires 30d;
        }
    }

    # Media files
    location /media/ {
        alias /srv/grownica/project/media/;
        autoindex off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # Proxy to Django application
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;  # ✅ Всегда HTTP для IP!
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_redirect off;
        
        # Timeout settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}
