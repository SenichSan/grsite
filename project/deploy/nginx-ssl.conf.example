# /etc/nginx/sites-available/grownica
# Правильная конфигурация с SSL и редиректами для устранения зацикливания

# HTTP сервер - только для редиректа на HTTPS
server {
    listen 80;
    server_name your-domain.com www.your-domain.com 84.247.162.92;
    
    # Редирект всех HTTP запросов на HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS сервер - основная конфигурация
server {
    listen 443 ssl http2;
    server_name your-domain.com www.your-domain.com 84.247.162.92;

    # SSL сертификаты (замените на ваши пути)
    ssl_certificate /path/to/your/certificate.crt;
    ssl_certificate_key /path/to/your/private.key;
    
    # Современные SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Max upload size
    client_max_body_size 20M;

    # Static files
    location /static/ {
        alias /srv/grownica/project/staticfiles/;
        autoindex off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
        
        # AVIF support
        location ~* \.(avif)$ {
            add_header Vary Accept;
            expires 30d;
        }
    }

    # Media files
    location /media/ {
        alias /srv/grownica/project/media/;
        autoindex off;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # Proxy to Django application
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;  # ✅ Всегда HTTPS!
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_redirect off;
        
        # Timeout settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}
