# Пример .env файла для работы по IP без SSL
# Устраняет зацикливание HTTP ↔ HTTPS редиректов
# Скопируйте в .env и настройте под ваш сервер

# Django основные настройки
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=84.247.162.92,localhost,127.0.0.1

# База данных
DB_NAME=grdbhome
DB_USER=home
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# HTTPS настройки - ОТКЛЮЧЕНЫ для работы по IP
SECURE_SSL_REDIRECT=False          # ❌ КРИТИЧНО! Отключить редирект на HTTPS
SECURE_HSTS_SECONDS=0              # ❌ Отключить HSTS для HTTP
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
CSRF_COOKIE_SECURE=False           # ❌ Cookies по HTTP
SESSION_COOKIE_SECURE=False        # ❌ Сессии по HTTP

# CSRF trusted origins - только HTTP для IP
CSRF_TRUSTED_ORIGINS=http://84.247.162.92

# Email настройки
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Логирование
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE=/srv/grownica/logs/app.log

# Статические файлы (без хеширования для простоты)
# STATICFILES_STORAGE=django.contrib.staticfiles.storage.StaticFilesStorage

# Nova Poshta API (если используется)
NOVA_POSHTA_API_KEY=your-nova-poshta-api-key

# Дополнительные настройки безопасности для HTTP
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
