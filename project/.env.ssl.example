# Пример .env файла для продакшена с SSL
# Скопируйте в .env и настройте под ваш сервер

# Django основные настройки
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,84.247.162.92

# База данных
DB_NAME=grdbhome
DB_USER=home
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# HTTPS настройки - ВАЖНО для устранения зацикливания!
SECURE_SSL_REDIRECT=False  # ❌ ОТКЛЮЧИТЬ в Django! Nginx делает редирект
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://84.247.162.92

# Email настройки
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Логирование
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE=/srv/grownica/logs/app.log

# Статические файлы с кэшированием
STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage

# Nova Poshta API (если используется)
NOVA_POSHTA_API_KEY=your-nova-poshta-api-key
